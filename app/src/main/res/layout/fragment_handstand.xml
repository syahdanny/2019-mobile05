<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Handstand">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handstand Pushups"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/handsup"
            app:layout_constraintLeft_toLeftOf="@+id/top"
            />

        <TextView
            android:id="@+id/advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toRightOf="@+id/stars"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" The handstand push-up (press-up) - also \n called the vertical push-up (press-up) or the \n inverted push-up (press-up) also called \n commandos - is a type of push-up excercise \n where the body is positioned in a handstand. \n to prepare the strength until one has built \n adequate balance."
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/stars"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintRight_toRightOf="@id/fav"

            />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toLeftOf="@id/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:text="12"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toRightOf="@id/comment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:text="154"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toRightOf="@id/like"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toLeftOf="@id/text"/>

        <ImageView
            android:id="@+id/usera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/usera"
            android:layout_marginTop="10dp"
            android:layout_marginRight="170dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toLeftOf="@id/fav"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/userb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userb"
            android:layout_marginTop="9dp"
            android:layout_marginRight="70dp"
            app:layout_constraintLeft_toRightOf="@id/usera"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/morelike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/morelike"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toRightOf="@id/userb"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:text="+5"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toRightOf="@id/userb"/>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stars"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stars"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stars"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stars"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginLeft="45dp"/>

        <ImageView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stars"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/handsup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/haspusup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"/>

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fav_icon"
            app:layout_constraintTop_toTopOf="@+id/handsup"
            app:layout_constraintLeft_toRightOf="@+id/handsup"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>